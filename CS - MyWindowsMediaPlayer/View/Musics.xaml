<Page x:Class="MyWindowsMediaPlayer.View.Musics"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:MyWindowsMediaPlayer.View"
      xmlns:viewmodel="clr-namespace:MyWindowsMediaPlayer.ViewModel"
      mc:Ignorable="d" 
      d:DesignHeight="300" d:DesignWidth="300"
      Title="Musics">

    <Grid>
        <Grid.DataContext>
            <viewmodel:MusicLibraryVM />
        </Grid.DataContext>
        <Grid.RowDefinitions>
            <RowDefinition Height="40" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <Button Content="Modifier la bibliothèque" Grid.Row="0" />
        <DataGrid Grid.Row="1" ItemsSource="{Binding Path=Library.Items}" AutoGenerateColumns="False">
            <DataGrid.Columns>
                <DataGridTextColumn Binding="{Binding Name}" Header="Piste" Width="*" />
                <DataGridTextColumn Binding="{Binding Artists}" Header="Artiste" Width="*" />
                <DataGridTextColumn Binding="{Binding Duration}" Header="Durée" Width="*" />
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</Page>
